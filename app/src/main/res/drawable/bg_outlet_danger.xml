<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/item_disable"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/red_green_pressed"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/red_green"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#F0F0F0"/>
            <stroke android:color="@color/red_green" android:width="0.5dp"/>
        </shape>
    </item>
</selector>