<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWindowBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avatarView"
        android:layout_width="@dimen/px_240"
        android:layout_height="@dimen/px_240"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pic_2300060_l"
        android:contentDescription="@string/picture" />

    <TextView
        android:id="@+id/nameView"
        android:textColor="@color/equipment_quality_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="@dimen/font_size_30px"
        app:layout_constraintStart_toEndOf="@+id/avatarView"
        app:layout_constraintTop_toTopOf="@+id/avatarView"
        tools:text="青龙偃月刀" />

    <TextView
        android:id="@+id/view0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/nameView"
        app:layout_constraintTop_toBottomOf="@+id/nameView"
        tools:text="携带等级" />

    <TextView
        android:id="@+id/useLevelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/view0"
        app:layout_constraintTop_toTopOf="@+id/view0"
        tools:text="70" />

    <TextView
        android:id="@+id/fieldsView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/equipment_quality_8"
        android:text="武器基本效果+30%\n永不磨损\n暴击+13\n进攻+200\n命中时15%概率施放[飞龙在天]"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/avatarView"
        app:layout_constraintTop_toBottomOf="@+id/avatarView" />

    <TextView
        android:id="@+id/suitView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="套装(5)\n  青龙偃月刀\n  青龙战靴\n  青龙头盔\n  青龙圣铠\n  青龙护腿\n\n  [2件]伤害减少+240\n  [3件]速度+50\n  [5件]四围+8"
        android:textColor="@color/equipment_quality_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fieldsView"
        app:layout_constraintTop_toBottomOf="@+id/fieldsView" />

    <TextView
        android:id="@+id/steadyLevelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/font_size_30px"
        android:textColor="@color/equipment_quality_8"
        android:text="+9"
        app:layout_constraintBottom_toBottomOf="@+id/nameView"
        app:layout_constraintStart_toEndOf="@+id/nameView"
        app:layout_constraintTop_toTopOf="@+id/nameView" />

    <TextView
        android:id="@+id/durableView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="-/-"
        app:layout_constraintBottom_toBottomOf="@+id/nameView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nameView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="进攻+300\n速度+20"
        app:layout_constraintStart_toStartOf="@+id/view0"
        app:layout_constraintTop_toBottomOf="@+id/view0" />

    <TextView
        android:id="@+id/evaluateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="携带等级-10(鉴定)"
        android:textColor="@color/equipment_quality_2"
        app:layout_constraintBottom_toBottomOf="@+id/avatarView"
        app:layout_constraintStart_toStartOf="@+id/nameView" />

</android.support.constraint.ConstraintLayout>